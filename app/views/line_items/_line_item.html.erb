<% if product = Product.find_by(id: line_item.product_id) %>
<tr>
  <td>
    <%= image_tag product.image.tiny, alt: product.name %>
  </td>
  <td>
    <%= product.name %>
  </td>
  <td>
    <%= product.description %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.item_price %>
  </td>
  <td>
    <%= humanized_money_with_symbol line_item.total_price %>
  </td>
</tr>
<% end %>
